<Window x:Class="NightBits_IMVU_Cleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NightBits IMVU Cleaner" Height="185.2" Width="226.6" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Left" Width="97" Height="140" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button Content="Clean all" Name="CleanAll" HorizontalAlignment="Left" Margin="10,5,-113,0" VerticalAlignment="Top" Width="200" Click="CleanAll_Click" Height="30"/>
        <Button Content="Clean cache" Name="CleanCache" Margin="10,43,-113,0" VerticalAlignment="Top" Click="CleanCache_Click" Height="30"/>
        <Button Content="Clean avi" Name="CleanAvi" HorizontalAlignment="Left" Margin="10,118,-113,-8" VerticalAlignment="Top" Width="200" Click="CleanAvi_Click" Height="30" Grid.RowSpan="2"/>
        <Button Content="Clean logs" Name="CleanLogs" HorizontalAlignment="Left" Margin="10,80,-113,0" VerticalAlignment="Top" Width="200" Click="CleanLogs_Click" Height="30"/>
    </Grid>
</Window>
